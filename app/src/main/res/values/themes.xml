<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="lollipop">
    <!-- Base application theme. -->
    <style name="Theme.Timetable2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Timetable2.NoActionBar">
        <!-- значки панелей навигации -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>
        <!-- кнопоки -->
        <item name="colorButtonNormal">@color/endGradientLight</item>
        <!-- фон панелей навигации -->
        <item name="colorPrimaryVariant">@color/endGradientLight</item>
        <item name="android:navigationBarColor">@color/startGradientLight</item>
        <!-- switch -->
        <item name="colorControlActivated">#00BFFF</item>
        <!-- цвет ссылок -->
        <item name="android:textColorLink">#00BFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- убираем издишний интерфейс -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- цвет фона -->
        <item name="android:windowBackground">@drawable/background_gradient_light</item>

        <item name="actionBarTheme">@drawable/background_gradient_light</item>
    </style>
    <style name="backgroundColor">
        <item name="android:background">@color/startGradientLight</item>
    </style>

    <style name="Theme.Timetable2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Timetable2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>