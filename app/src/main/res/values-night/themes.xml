<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timetable2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- верхняя панель навигации -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- текст -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Timetable2.NoActionBar">
        <!-- значки панелей навигации -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">false</item>
        <!-- кнопоки -->
        <item name="colorButtonNormal">@color/endGradientDark</item>
        <!-- фон панелей навигации -->
        <item name="colorPrimaryVariant">@color/endGradientDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/startGradientDark</item>
        <!-- switch -->
        <item name="colorControlActivated">#00BFFF</item>
        <!-- цвет ссылок -->
        <item name="android:textColorLink">#00BFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- цвет текста -->
        <item name="android:textColor">@color/silver</item>
        <item name="android:editTextColor">@color/silver</item>
        <!-- убираем издишний интерфейс -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- цвет фона -->
        <item name="android:windowBackground">@drawable/background_gradient_dark</item>
        <item name="actionBarTheme">@drawable/background_gradient_dark</item>

    </style>
    <style name="textColor">
        <item name="android:textColor">@color/silver</item>
    </style>
    <style name="backgroundColor">
        <item name="android:background">@color/startGradientDark</item>
    </style>
</resources>